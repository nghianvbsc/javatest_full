<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorGreen</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ItemButtonHome">
        <item name="android:layout_width">@dimen/_48sdp</item>
        <item name="android:layout_height">@dimen/_48sdp</item>
        <item name="android:background">@drawable/selector_circle_green</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
    </style>

    <style name="itemButtonLevel">
        <item name="android:layout_width">@dimen/_120sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:background">@drawable/selector_botton_level</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
    </style>

    <style name="animDialog">
        <item name="android:windowEnterAnimation">@anim/anim_top_in</item>
        <item name="android:windowExitAnimation">@anim/anim_bottom_out</item>
    </style>
</resources>
